{
    "PBS": {
        "popen" : "qsub",
        "script_lines": {
            "1" : ["#!/bin/bash\n#PBS -j oe\n#PBS -o $PBS_O_WORKDIR/logtmp", ""],
            "2" : ["#PBS -N <--0-->", "JOB_NAME"],
            "3" : ["#PBS -l select=1:mem=<--0-->GB:ncpus=<--1-->","RAM|THREADS"],
            "4" : ["#PBS -A <--0-->\ncd $PBS_O_WORKDIR","USER"],
            "5" : ["{\n<--0-->\n<--1-->} 2>&1 | tee <--2-->", "MODULES|COMMAND|TEMP_LOG_FILE"],
            "6" : ["t=date\nsed -e 's/^/[PIPERNA-$t] JOB: <--0-->:\t\t/' <--1--> >> <--2-->", "JOB_NAME|TEMP_LOG_FILE|LOG_FILE"],
            "7" : ["rm <--0-->", "TEMP_LOG_FILE"]
        },
        "resources" : {
            "PIPERNA_STAR": {
                "ram" : "8",
                "threads" : "4",
                "modules" : "module load STAR"
            },
            "PIPERNA_KALLISTO": {
                "ram" : "8",
                "threads" : "4",
                "modules" : "module load kallisto"
            },
            "PIPERNA_SUMMARIZE": {
                "ram" : "16",
                "threads" : "8",
                "modules" : "module load R"
            }
        }
    },
    "SLURM": {
    "popen" : ["sbatch"],
    "script_lines": {
        "1" : ["#!/bin/bash\n#SBATCH --output=outtmp\n#SBATCH --error=errtmp", ""],
        "2" : ["#SBATCH --job-name=<--0-->", "JOB_NAME"],
        "3" : ["#SBATCH --ntasks=1\n#SBATCH --cpus-per-task=<--0-->","THREADS"],
        "4" : ["#SBATCH --mem-per-cpu=<--0-->000","RAM"],
        "5" : ["{\n<--0-->\n<--1-->} 2>&1 | tee <--2-->", "MODULES|COMMAND|TEMP_LOG_FILE"],
        "6" : ["t=date\nsed -e 's/^/[PIPERNA-$t] JOB: <--0-->:\t\t/' <--1--> >> <--2-->", "JOB_NAME|TEMP_LOG_FILE|LOG_FILE"],
        "7" : ["rm <--0-->", "TEMP_LOG_FILE"]
    },
        "resources" : {
            "PIPERNA_STAR": {
                "ram" : "8",
                "threads" : "4",
                "modules" : "module load STAR"
            },
            "PIPERNA_KALLISTO": {
                "ram" : "8",
                "threads" : "4",
                "modules" : "module load kallisto"
            },
            "PIPERNA_SUMMARIZE": {
                "ram" : "16",
                "threads" : "8",
                "modules" : "module load R"
            }
        }
    }
}